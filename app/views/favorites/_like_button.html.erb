<% if current_user.like?(micropost) %>
  <%= form_for(current_user.favorites.find_by(micropost_id: micropost.id), html: { method: :delete }) do %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag do %>
      <span class="fa fa-heart like-btn-unlike"></span>
    <% end %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag do %>
      <span class="fa fa-heart like-btn"></span>
    <% end %>
  <% end %>
<% end %>
